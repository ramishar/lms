<main id="site-main">
  <div class="form-title text-center">
    <h2 class="text-dark">Academy - Update Profile</h2>
  </div>
</main>

<form action="" method="POST" enctype="multipart/form-data">
      <div class="new_user">
        <div class="form-group">
          <label for="username" class="text-light">Username</label>
          <input type="hidden" name="id" value="<%= user._id %>" />
          <input
            type="text"
            name="username"
            value="<%= user.username %>"
            placeholder="Username"
          />
        </div>
        <div class="form-group">
            <label for="fullname" class="text-light">Fullname</label>
            <input
              type="text"
              name="fullname"
              value="<%= user.fullname %>"
              placeholder="Fullname"
            />
          </div>
          <div class="form-group">
            <label for="email" class="text-light">Email Address</label>
            <input
              type="text"
              name="email"
              value="<%= user.email %>"
              placeholder="Email Address"
            />
          </div>
          <div class="form-group">
            <label for="contact" class="text-light">Contact number</label>
            <input
              type="text"
              name="contact"
              value="<%= user.contact %>"
              placeholder="Contact number"
            />
          </div>
          <div class="form-group">
            <label for="password" class="text-light">Password</label>
            <input
              type="password"
              name="password"
              value="<%= user.password %>"
              placeholder="Password"
            />
          </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Update</button>
        </div>
      </div>
    </form>
  </div>



<%- include('partials/_footer'); -%>
